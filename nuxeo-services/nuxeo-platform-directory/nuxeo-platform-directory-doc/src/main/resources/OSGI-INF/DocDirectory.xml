<?xml version="1.0"?>
<component name="org.nuxeo.ecm.directory.doc.DocDirectoryFactory">

  <require>org.nuxeo.ecm.core.api.CoreSessionServiceImpl</require>

  <implementation
    class="org.nuxeo.ecm.directory.doc.DocDirectoryFactory" />

  <require>org.nuxeo.ecm.directory.DirectoryServiceImpl</require>

  <documentation>Doc Directory implementation.</documentation>

  <extension-point name="directories">
    <object class="org.nuxeo.ecm.directory.doc.DocDirectoryDescriptor" />

    <documentation>
      This extension point can be used to register new
      doc directories.
      <code>
        ...
        <directory name="myDocDirectory">
          <schema>user</schema>
          <idField>username</idField>
          <passwordField>password</passwordField>
          <readOnly>false</readOnly>
        </directory>

      </code>

    </documentation>
  </extension-point>

</component>
